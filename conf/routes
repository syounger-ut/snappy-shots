GET /api/ping                   com.authService.controllers.ApiController.ping()
GET /api/post/:postId           com.authService.controllers.ApiController.getPost(postId: Int)
GET /api/post/:postId/comments  com.authService.controllers.ApiController.getComments(postId: Int)
GET /api/addUser                com.authService.controllers.ApiController.addUser()

# Photo routes
GET /api/photos                  com.authService.controllers.PhotosController.getPhotos()
GET /api/photos/:photoId         com.authService.controllers.PhotosController.getPhoto(photoId: Int)

GET /auth/login                  com.authService.controllers.AuthenticationController.login()
POST /auth/register             com.authService.controllers.AuthenticationController.register()
